{
  "name": "codeoptimization",
  "displayName": "代码优化",
  "description": "基于chatgpt，实现代码解析、代码修复",
  "publisher": "ferris",
  "version": "0.0.3",
  "repository": "https://github.com/code-is-mylife/extension_code_optimization",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.code.optimization.webview.selection",
        "title": "chatGPT：优化这段代码"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidebar_code_optimization",
          "title": "chatGPT-高顿版",
          "icon": "resources/a.svg"
        }
      ]
    },
    "views": {
      "sidebar_code_optimization": [
        {
          "type": "webview",
          "id": "extension.code.optimization.webview",
          "name": "交互窗口"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "extension.code.optimization.webview.selection",
          "group": "1_modification",
          "when": "editorHasSelection"
        }
      ]
    },
    "iconDefinitions": {
      "_folder_dark": {
        "iconPath": "./resources/a.svg"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "chai": "^4.3.7",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "axios": "^1.3.5"
  }
}